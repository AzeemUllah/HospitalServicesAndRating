<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context="hospital.hospital.Login">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="visible"
        android:keepScreenOn="true"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="50sp"
        android:textStyle="bold" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9.92">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/logocolor"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:paddingLeft="76dp"
            android:paddingRight="76dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_weight="3"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="15dp"
            android:layout_weight=".1"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/nameTxtb"
            android:layout_width="match_parent"
            android:layout_weight=".01"
            android:layout_marginRight="20dp"
            android:inputType="text"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="Alen Walker"
            android:theme="@style/EditTextTheme"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:paddingTop="20dp"
            android:textSize="15dp"
            android:layout_weight=".1"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/emailTxtb"
            android:layout_width="match_parent"
            android:layout_weight=".01"
            android:layout_marginRight="20dp"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="example@abc.com"
            android:theme="@style/EditTextTheme"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="15dp"
            android:paddingTop="20dp"
            android:layout_weight=".1"
            android:layout_marginLeft="20dp"
            />


        <EditText
            android:id="@+id/passwordTxtb"
            android:layout_width="match_parent"
            android:layout_weight=".01"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:theme="@style/EditTextTheme"
            android:text="example"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conform Password"
            android:textSize="15dp"
            android:paddingTop="20dp"
            android:layout_weight=".1"
            android:layout_marginLeft="20dp"
            />


        <EditText
            android:id="@+id/conformPasswordTxtb"
            android:layout_width="match_parent"
            android:layout_weight=".01"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:theme="@style/EditTextTheme"
            android:text="example"
            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_weight="4.8"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            />

        <ImageButton
            android:id="@+id/loginAsFacilityBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/nextcolorbtn" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_weight=".1"
            android:visibility="invisible"
            android:layout_height="20dp"
            />
    </LinearLayout>


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/dummy_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="@string/dummy_button" />

        </LinearLayout>
    </FrameLayout>

</FrameLayout>
