<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="hospital.hospital.EditProfileFacility">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="50sp"
        android:textStyle="bold" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/editprofileheaderbackground"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/imageView" />

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".001"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/relativeLayout">
                <com.pkmmte.view.CircularImageView
                    android:id="@+id/imgContact"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/profile_user"/>


                <!--<ImageView-->
                <!--android:id="@+id/online"-->
                <!--android:layout_width="15dp"-->
                <!--android:layout_height="15dp"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:layout_marginRight="5dp"-->
                <!--android:layout_alignRight="@+id/imgContact"-->
                <!--android:layout_alignTop="@+id/imgContact"-->
                <!--android:background="@drawable/circle_green" />-->

                <ImageView
                    android:id="@+id/uploadPic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignRight="@+id/imgContact"
                    android:layout_alignTop="@+id/imgContact"
                    android:background="@null"
                    android:src="@drawable/uploadimageiconbtn"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignEnd="@+id/relativeLayout"
                android:layout_marginBottom="10dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Edit Profile"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_weight="9"
            android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of Hospital"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_weight=".1"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/nameTxtb"
            android:layout_width="match_parent"
            android:layout_weight=".01"
            android:layout_marginRight="20dp"
            android:inputType="text"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="Alen Walker"
            android:theme="@style/EditTextTheme"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of Attendent"
            android:paddingTop="10dp"
            android:textSize="15dp"
            android:layout_weight=".1"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/emailTxtb"
            android:layout_width="match_parent"
            android:layout_weight=".01"
            android:layout_marginRight="20dp"
            android:inputType="text"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="example@abc.com"
            android:theme="@style/EditTextTheme"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speciality"
            android:textSize="15dp"
            android:paddingTop="10dp"
            android:layout_weight=".1"
            android:layout_marginLeft="20dp"
            />


        <EditText
            android:id="@+id/passwordTxtb"
            android:layout_width="match_parent"
            android:layout_weight=".01"
            android:inputType="text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:theme="@style/EditTextTheme"
            android:text="example"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="15dp"
            android:paddingTop="10dp"
            android:layout_weight=".1"
            android:layout_marginLeft="20dp"
            />


        <EditText
            android:id="@+id/passwordTx"
            android:layout_width="match_parent"
            android:layout_weight=".01"
            android:inputType="text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:theme="@style/EditTextTheme"
            android:text="example"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="15dp"
            android:layout_weight=".1"
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            />


        <Spinner
            android:id="@+id/locationSp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight=".01"
            android:layout_marginRight="20dp"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:entries="@array/location"
            android:theme="@style/EditTextTheme"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website"
            android:textSize="15dp"
            android:paddingTop="10dp"
            android:layout_weight=".1"
            android:layout_marginLeft="20dp"
            />


        <EditText
            android:id="@+id/passwordTxt"
            android:layout_width="match_parent"
            android:layout_weight=".01"
            android:inputType="text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:theme="@style/EditTextTheme"
            android:text="example"
            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            />

        <ImageButton
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:adjustViewBounds="true"
            android:layout_weight="0.01"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/nextcolorbtn" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_weight="0.1"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            />

</LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- This FrameLayout insets its children based on system windows using
    android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>

        <Button
            android:id="@+id/dummy_button"
            style="?metaButtonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dummy_button"
            android:visibility="gone" />
    </FrameLayout>

</FrameLayout>
