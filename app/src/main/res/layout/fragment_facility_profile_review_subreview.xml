<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:paddingBottom="10dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:id="@+id/relativeLayout">

            <com.pkmmte.view.CircularImageView
                android:id="@+id/imgReviewer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:src="@drawable/profile_user"/>

            <ImageView
                android:id="@+id/imageReviewerOnlineDot"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="5dp"
                android:layout_alignRight="@+id/imgReviewer"
                android:layout_alignTop="@+id/imgReviewer"
                android:background="@drawable/circle_green" />


        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:weightSum="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reviewerNameTxtb"
            android:layout_width="wrap_content"
            android:textSize="17dp"
            android:text="Some Name"
            android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="01dp"
                android:paddingLeft="10dp"
                android:weightSum=".5">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_weight=".1"
                    android:src="@drawable/filledstar" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_weight=".1"
                    android:src="@drawable/filledstar" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_weight=".1"
                    android:src="@drawable/filledstar" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_weight=".1"
                    android:src="@drawable/filledstar" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_weight=".1"
                    android:src="@drawable/filledstar" />
            </LinearLayout>
        </LinearLayout>
        
        <TextView
            android:id="@+id/reviewTextTxtb"
            android:layout_weight="3"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:text="Hi there How Are you"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>