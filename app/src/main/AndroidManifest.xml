<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hospital.hospital">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EditProfile"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_edit_profile"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".IntroScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_intro_screen"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash_screen2"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Login"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_login"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".SignupPhaseOne"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_signup"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".SignupPhaseTwo"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_signup_phase_two"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".Chat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FacilityProfile"></activity>
    </application>

</manifest>